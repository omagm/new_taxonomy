{
  "name": "umex-taxonomy-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for managing machine taxonomy (categories, specifications, models, machines)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "restart": "npm run build && pkill -f 'node.*app/dist/index.js' || true"
  },
  "keywords": ["mcp", "taxonomy", "machine-specs"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.23.8",
    "schemas": "file:../schemas"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
